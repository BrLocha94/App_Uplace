<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp">

                    <ImageView
                        android:id="@+id/iv_materia_professor"
                        android:layout_width="0dp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:src="@drawable/professor" />

                    <TextView
                        android:id="@+id/tv_materia_professor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:text="Tio Professor"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp">

                    <ImageView
                        android:id="@+id/iv_materia_horario"
                        android:layout_width="0dp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:src="@drawable/horario" />

                    <TextView
                        android:id="@+id/tv_materia_horario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:text="14h ~ 16h"
                        android:textSize="22sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp">

                    <ImageView
                        android:id="@+id/iv_materia_ch"
                        android:layout_width="0dp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:src="@drawable/carga_horaria" />

                    <TextView
                        android:id="@+id/tv_materia_ch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:text="Carga Horária"
                        android:textSize="22sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp">

                    <ImageView
                        android:id="@+id/iv_materia_numero_faltas"
                        android:layout_width="0dp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:src="@drawable/faltas" />

                    <TextView
                        android:id="@+id/tv_materia_numero_faltas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:text="Número de Faltas: "
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp">

                    <ImageView
                        android:id="@+id/iv_materia_numero_faltasf"
                        android:layout_width="0dp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:src="@drawable/faltas" />

                    <TextView
                        android:id="@+id/tv_materia_numero_faltasf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:text="Número de Faltas: "
                        android:textSize="20sp" />

                </LinearLayout>


                <ListView
                    android:id="@+id/lista_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>


                <!--
                <android.support.v7.widget.GridLayout
                    android:id="@+id/lista_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.GridLayout>
                -->
                <Button
                    android:id="@+id/b_materia_nova_prova"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/botao"
                    android:text="@string/adicionar_nova_prova"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/b_materia_nova_falta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/botao"
                    android:text="@string/adicionar_falta"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/b_materia_edita"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/botao"
                    android:text="@string/editar_materia"
                    android:textColor="#fff" />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gerencia_parte_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp">

            <EditText
                android:id="@+id/et_gerencia_materia_nome"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/border"
                android:hint="Nome da Matéria"
                android:paddingLeft="10dp"
                android:paddingTop="5sp"
                android:paddingRight="10dp"
                android:paddingBottom="5sp"
                android:textSize="25sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp">

            <EditText
                android:id="@+id/ed_gerencia_materia_professor"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/border"
                android:hint="Nome do Professor"
                android:paddingLeft="10dp"
                android:paddingTop="5sp"
                android:paddingRight="10dp"
                android:paddingBottom="5sp"
                android:textSize="25sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp">

            <EditText
                android:id="@+id/ed_gerencia_localiz"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/border"
                android:hint="Local"
                android:paddingLeft="10dp"
                android:paddingTop="5sp"
                android:paddingRight="10dp"
                android:paddingBottom="5sp"
                android:textSize="25sp"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp">

            <EditText
                android:id="@+id/ed_gerencia_materia_ch"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/border"
                android:hint="Carga Horária"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingTop="5sp"
                android:paddingRight="10dp"
                android:paddingBottom="5sp"
                android:textSize="25sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/box1"
        android:layout_marginTop="10sp"
        android:visibility="visible">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/checkBoxseg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="SEG"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/horarioi_seg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="INÍCIO"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/horariof_seg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="FIM"
                    android:background="@drawable/box"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/checkBoxter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="TER"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/horarioi_ter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="INÍCIO"
                    android:layout_weight="1"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/horariof_ter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="FIM"
                    android:background="@drawable/box"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/checkBoxqua"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="QUA"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/horarioi_qua"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="INÍCIO"
                    android:layout_weight="1"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/horariof_qua"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="FIM"
                    android:background="@drawable/box"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/checkBoxqui"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="QUI"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/horarioi_qui"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="INÍCIO"
                    android:layout_weight="1"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/horariof_qui"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="FIM"
                    android:background="@drawable/box"
                    android:layout_weight="1" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/checkBoxsex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="SEX"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/horarioi_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="INÍCIO"
                    android:layout_weight="1"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/horariof_sex"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:hint="FIM"
                    android:layout_height="match_parent"
                    android:background="@drawable/box"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/checkBoxsab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="SAB"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/horarioi_sab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="INÍCIO"
                    android:layout_weight="1"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/horariof_sab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="FIM"
                    android:background="@drawable/box"
                    android:layout_weight="1" />

            </TableRow>
            <Button
                android:id="@+id/botao_gerencia_materia_cria"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/botao"
                android:text="Criar materia"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="424dp" />

        </TableLayout>


    </ScrollView>



</RelativeLayout>
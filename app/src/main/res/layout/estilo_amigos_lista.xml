<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/amigo_avatar"
                android:layout_width="100dp"
                android:layout_height="95dp"
                tools:srcCompat="@tools:sample/avatars[1]" />

            <TextView
                android:id="@+id/amigo_nome"
                android:layout_width="208dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/amigo_avatar"
                android:layout_toRightOf="@id/amigo_avatar"
                android:gravity="left"
                android:orientation="vertical"
                android:textColor="#000"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="@tools:sample/full_names[98]" />

            <TextView
                android:id="@+id/amigo_curso"
                android:layout_width="208dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/amigo_avatar"
                android:layout_toRightOf="@id/amigo_avatar"
                android:layout_alignParentBottom="true"
                android:gravity="left"
                android:orientation="vertical"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Science Computer" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>